<div class="mx-3 mt-3">
	<div class="d-flex align-items-center justify-content-center">
		<h4>{{title}}</h4>
		<p class="ml-5 mb-1 text-secondary">{{tagLine}}</p>
		<h6 class="ml-auto mr-3">x</h6>
	</div>
	<hr>
	<div class="row flex-xl-nowrap">
		<div class="col-2 pr-1 mr-2">
			<nav class="navbar" role="navigation">
				<ul class="nav navbar-nav side-nav" style="list-style-type: none;">
                    {{#each steppers as |item index|}}
                    <li>
						<h6>
							<span class="rounded-circle">{{index}}</span>
							{{if item.active 'SELECT A'}} {{item.label}}
						</h6>
                        {{#each item.infos as |info|}}
						    <p class="ml-4 text-primary">{{info}}</p>
                        {{/each}}
					</li>
                    {{/each}}
				</ul>
			</nav>
		</div>
		<main class="col-6 py-md-3 pl-md-5 bd-content bg-gray-lighter">
            {{#if (eq current.label 'SERVICE')}}
				{{#each @services as |svc|}}
					<ServiceInfo @svc={{svc}} @setActive={{action 'setActiveService'}} />
				{{/each}}
            {{else if (eq current.label 'LOCATION')}}
                <Locations @svc={{activeSvc}}/>
            {{/if}}
		</main>
	</div>
</div>
{{yield}}